<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/courseb"
    tools:context=".Fragment.EbookFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/ebooka"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_search"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.875"
        app:queryHint="Search..." />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchView"
        android:layout_marginTop="228dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="@string/ebook_list"
        android:textColor="#FFC957"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_alignParentBottom="true"
        app:layout_constraintTop_toBottomOf="@+id/textView5">


        <LinearLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/banksentral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banksentral" />

            <ImageView
                android:id="@+id/badanusaha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/badanusaha" />

            <ImageView
                android:id="@+id/perkoperasian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/perkoperasian" />

            <ImageView
                android:id="@+id/manajemen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/manajemen" />

            <ImageView
                android:id="@+id/kd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/kd1" />

            <ImageView
                android:id="@+id/kd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/kd2" />

            <ImageView
                android:id="@+id/masalahpokok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/masalahpokok" />

            <ImageView
                android:id="@+id/si"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/si" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>